{% trans_default_domain 'FOSUserBundle' %}

{% extends "::theme.html.twig" %}

{% block content %}
    <!-- START: Breadcrumbs -->
    <div class="nk-gap-1"></div>
    <div class="container">
        <ul class="nk-breadcrumbs">


            <li><a href="{{ path('tyras_core_homepage') }}">Home</a></li>


            <li>
                <span class="fa fa-angle-right"></span>
            </li>

            <li><a href="#">Profil</a></li>


        </ul>
    </div>
    <div class="nk-gap-1"></div>
    <!-- END: Breadcrumbs -->

    <div class="container">
        <div class="row equal-height vertical-gap">
            <div class="col-lg-8">

                <div class="nk-box-2 bg-dark-2" style="height:auto">
                    {{ form_start(form, {'method': 'POST', 'action': path('fos_user_profile_edit')}) }}
                    {#{{ form_widget(form) }}#}
                    <div class="form-group row">
                        {{ form_label(form.username, '', { 'label_attr': {'class': 'col-lg-2 col-md-2 col-sm-2 control-label'} }) }}
                        <div class="col-lg-8 col-md-8 col-sm-8">
                            {{ form_widget(form.username, { 'attr': {'class': 'form-control', 'placeholder': '' } }) }}
                            {{ form_errors(form.username) }}
                        </div>
                    </div>
                    <div class="form-group row">
                        {{ form_label(form.email, '', { 'label_attr': {'class': 'col-lg-2 col-md-2 col-sm-2 control-label'} }) }}
                        <div class="col-lg-8 col-md-8 col-sm-8">
                            {{ form_widget(form.email, { 'attr': {'class': 'form-control', 'placeholder': '' } }) }}
                            {{ form_errors(form.email) }}
                        </div>
                    </div>
                    <div class="form-group row">
                        {{ form_label(form.current_password, '', { 'label_attr': {'class': 'col-lg-2 col-md-2 col-sm-2 control-label'} }) }}
                        <div class="col-lg-8 col-md-8 col-sm-8">
                            {{ form_widget(form.current_password, { 'attr': {'class': 'form-control', 'placeholder': '' } }) }}
                            {{ form_errors(form.current_password) }}
                        </div>
                    </div>
                    <div class="form-group row">
                        {{ form_label(form.plainPassword.first, '', { 'label_attr': {'class': 'col-lg-2 col-md-2 col-sm-2 control-label'} }) }}
                        <div class="col-lg-8 col-md-8 col-sm-8">
                            {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control', 'placeholder': '' } }) }}
                            {{ form_errors(form.plainPassword.first) }}
                        </div>
                    </div>
                    <div class="form-group row">
                        {{ form_label(form.plainPassword.second, '', { 'label_attr': {'class': 'col-lg-2 col-md-2 col-sm-2 control-label'} }) }}
                        <div class="col-lg-8 col-md-8 col-sm-8">
                            {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-control', 'placeholder': '' } }) }}
                            {{ form_errors(form.plainPassword.second) }}
                        </div>
                    </div>

                    {{ form_rest(form) }}

                    <div class="form-group row">
                        <div class="col-lg-offset-2 col-lg-10 col-md-offset-2 col-md-10 col-sm-offset-2 col-sm-10">
                            <button type="submit" class="nk-btn nk-btn-rounded nk-btn-color-main-1 nk-btn-hover-color-info"><span class="icon ion-paper-airplane"></span>{{ 'profile.edit.submit'|trans }}</button>
                        </div>
                    </div>
                    {{ form_end(form) }}
                </div>

                {#{% block fos_user_content %}
                    {% include "@FOSUser/Profile/show_content.html.twig" %}
                {% endblock fos_user_content %}#}

            </div>
            {% include 'sidebar.html.twig' %}
        </div>
    </div>

{% endblock %}
