<!-- START: Latest News -->
<div class="nk-gap-2"></div>
<h3 class="nk-decorated-h-2">
                <span>
                    <span class="text-main-1">Latest</span> News</span>
</h3>
<div class="nk-gap"></div>

<div class="nk-news-box">
    <div class="nk-news-box-list">
        <div class="nano">
            <div class="nano-content">

                {% for news in listNews %}
                    <div class="nk-news-box-item {% if loop.first %}nk-news-box-item-active{% endif %}">
                        <div class="nk-news-box-item-img">
                            <img src="{{ asset('assets/images/post-1-sm.jpg') }}" alt="{{ news.title }}">
                        </div>
                        <img src="{{ asset('assets/images/post-1.jpg') }}" alt="{{ news.title }}" class="nk-news-box-item-full-img">
                        <h3 class="nk-news-box-item-title">{{ news.title }}</h3>

                        <div class="nk-news-box-item-text">
                            <p>{{ news.content|resum(200) }}...</p>
                        </div>
                        <a href="{{ path('tyras_news_view', {'id': news.id, 'slug': news.slug}) }}" class="nk-news-box-item-url">Lire la suite</a>
                        <div class="nk-news-box-item-date">
                            <span class="fa fa-calendar"></span> {{ news.date|date('M j, Y') }}</div>
                    </div>
                {% endfor %}

            </div>
        </div>
    </div>
    <div class="nk-news-box-each-info">
        <div class="nano">
            <div class="nano-content">
                <!-- There will be inserted info about selected news-->
                <div class="nk-news-box-item-image" style="background-image: url('{{ asset('assets/images/post-1.jpg') }}');">
                </div>
                <h3 class="nk-news-box-item-title"></h3>
                <div class="nk-news-box-item-text">
                    <p></p>
                </div>
                <a href="blog-article.html" class="nk-news-box-item-more">Lire la suite</a>
                <div class="nk-news-box-item-date">
                    <span class="fa fa-calendar"></span>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="nk-gap-2"></div>
<!-- END: Latest News -->